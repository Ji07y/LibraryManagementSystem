@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Add New Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sidebar">
    <h2>Library Management</h2>
    <ul class="nav">
        <li class="nav-item"><a href="#" class="nav-link">Home</a></li>
        <li class="nav-item"><a href="#" class="nav-link">Books</a></li>
        <li class="nav-item"><a href="#" class="nav-link">Authors</a></li>
        <li class="nav-item"><a href="#" class="nav-link">Genres</a></li>
    </ul>
</div>

<div class="content">
    <h1>Add New Book</h1>
    <form asp-action="Create">
        <div>
            <label for="Title">Title</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div>
            <label for="Author">Author</label>
            <input type="text" asp-for="Author" class="form-control" />
        </div>
        <div>
            <label for="Genre">Genre</label>
            <input type="text" asp-for="Genre" class="form-control" />
        </div>
        <div>
            <label for="Available">Available</label>
            <input type="checkbox" asp-for="Available" class="form-check-input" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
