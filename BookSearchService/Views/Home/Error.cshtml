@model LibraryManagementSystem.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model?.RequestId != null)
{
<p>
    <strong>Request ID:</strong> <code>@Model.RequestId</code>
</p>
}
<p>
    <strong>Development Mode</strong><br>
    Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
    <dl>
        <dt>Development environment</dt>
        <dd><strong>Should</strong> be enabled when developing an application.</dd>
        <dt>Production environment</dt>
        <dd><strong>Should not</strong> be enabled when deploying an application to production.</dd>
    </dl>
</p>
