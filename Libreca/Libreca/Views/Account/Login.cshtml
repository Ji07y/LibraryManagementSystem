@model Libreca.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f0f4f8;
            font-family: 'Arial', sans-serif;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            width: 100%;
            max-width: 600px;
        }
        .card {
            border-radius: 15px;
            overflow: hidden;
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #e2d1f9;
            color: #5e43aa;
            text-align: center;
            padding: 20px;
            font-size: 24px;
            font-weight: bold;
        }
        .card-body {
            background-color: #ffffff;
            padding: 30px;
        }
        .form-group label {
            color: #5e43aa;
            font-weight: bold;
        }
        .form-control {
            border-radius: 25px;
            border: 1px solid #d2c8f0;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        }
        .btn-primary {
            background-color: #a3c4f3;
            border-color: #a3c4f3;
            border-radius: 25px;
            color: #ffffff;
        }
        .btn-primary:hover {
            background-color: #8cb2e5;
            border-color: #8cb2e5;
        }
        .alert {
            border-radius: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Bienvenidos a Libreca</h2>
            <div class="card">
                <div class="card-header">
                    Login
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">

                        <div class="form-group">
                            <label asp-for="Username" for="Username" class="control-label"></label>
                            <input asp-for="Username" type="text" id="username" name="username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" for="password" class="control-label"></label>
                            <input asp-for="Password" type="password" id="password" name="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>

                       
                        <div class="form-group mt-3">
                            <!-- Aquí puedes mostrar mensajes de error si es necesario -->
                            @if (ViewData.ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            }

                        </div>
                    </form>
                    <form asp-action="Register" method="get">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </form>
                   
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
